# NeuroCode Configuration Template
# Copy this file to .env and fill in your values

# GitHub Integration (Optional)
# Get token from: https://github.com/settings/tokens
# Required scopes: repo, read:org
GITHUB_TOKEN=ghp_your_github_personal_access_token_here
GITHUB_WEBHOOK_SECRET=your_webhook_secret_here

# GitLab Integration (Optional)
# Get token from: https://gitlab.com/-/profile/personal_access_tokens
# Required scopes: api, read_api
GITLAB_TOKEN=glpat-your_gitlab_token_here
GITLAB_URL=https://gitlab.com
GITLAB_WEBHOOK_SECRET=your_gitlab_webhook_secret_here

# Ollama Settings
OLLAMA_MODEL=codellama:7b-instruct
OLLAMA_HOST=http://localhost:11434

# API Server Settings
API_HOST=0.0.0.0
API_PORT=8000

# Scanner Settings
ENABLE_SEMGREP=true
ENABLE_BANDIT=true
ENABLE_CODELLAMA=true

# Performance Limits
MAX_FILE_SIZE_KB=500
MAX_FILES_PER_PR=50
SCAN_TIMEOUT_SECONDS=300

# Security Settings
MIN_SEVERITY_TO_REPORT=low
AUTO_COMMENT_ON_PR=true
